use film;

CREATE  TABLE  if not exists users(
id int PRIMARY key auto_increment,
name  varchar(255),
email varchar(255),
pass varchar(255)
);

/*  favoritos no se tiene que meter en la vase de datos  */






CREATE  TABLE  if not exists films(
id INT PRIMARY KEY AUTO_INCREMENT,
title varchar(255),
duration int ,
gender varchar(255),
director varchar(255),
year int ,
collection INT
);


INSERT INTO users (name, email, pass)
VALUES ('Juan Pérez', 'juan@example.com', '1234');
